<h1 class="text-center">Perfil de {{user.userName}}</h1>
<p class="text-center" >Editar perfil</p>
<div class="my-2 text-center" >
    {{#if imagen}}
        <img src="/img/perfil/{{imagen}}" alt="" class="rounded-circle">
    {{else}}
        <img src="/img/perfil/perfil.png" alt="" class="rounded-circle">
    {{/if}}

</div>

<form action="/perfil?_csrf={{csrfToken}}" method="post" enctype="multipart/form-data">
    <div class="text-center mb-2"> 
        <input class="form-control mb-2" id="formFile" type="file" name="myFile">
        <button class="btn btn-dark">Cambiar img de perfil</button>
    </div>
</form>
